    "version": "0.2.0",
    "configurations": [
        {
            "name": "macOS Playground",
            "preLaunchTask": "macOS Playground",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/macOS/Apps/Playground/Debug/Playground.app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "osx": {
                "MIMode": "lldb"
            }
        },
        {
            "name": "iOS Playground",
            "preLaunchTask": "iOS Playground Simulator",
            "type": "lldb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/iOS/Apps/Playground/Debug-iphonesimulator/Playground.app",
            "iosBundleId": "com.BabylonNative.Playground.iOS.Andy",
            "iosTarget": "last-selected",
        }
    ]
