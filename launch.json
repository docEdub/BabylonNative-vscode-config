    "version": "0.2.0",
    "configurations": [
        {
            "name": "macOS Playground",
            "preLaunchTask": "macOS Playground",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/macOS/Apps/Playground/Debug/Playground.app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "osx": {
                "MIMode": "lldb"
            }
        },
        {
            "name": "iOS Playground",
            "preLaunchTask": "iOS Playground Simulator",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/macOS/Apps/Playground/Debug/Playground.app",
            "osx": {
                "MIMode": "lldb",
                "targetArchitecture": "arm64",
            },
            "customLaunchSetupCommands": [
                {
                    "text": "-target-attach -n Playground", "description": "Attach to Playground", "ignoreFailures": false
                }
            ],
            "launchCompleteCommand": "exec-continue"
        }
    ]
}