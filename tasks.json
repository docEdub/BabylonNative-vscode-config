{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "macOS CMake",
      "command": "cmake",
      "args": ["-B", "build/macOS", "-G", "Xcode"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "iOS CMake",
      "command": "cmake",
      "args": [
        "-B",
        "build/iOS",
        "-G",
        "Xcode",
        "-D",
        "CMAKE_TOOLCHAIN_FILE=Dependencies/ios-cmake/ios.toolchain.cmake",
        "-D",
        "PLATFORM=OS64COMBINED",
        "-D",
        "ENABLE_ARC=0",
        "-D",
        "DEPLOYMENT_TARGET=12",

        // Setup provisioning in Xcode for any project at least once, and then look for this value in the text of one of the files in ~/Library/MobileDevice/Provisioning Profiles.
        "-D",
        "CMAKE_XCODE_ATTRIBUTE_DEVELOPMENT_TEAM=FPH36HBUH6",

        // Must match the iosBundleId keys in launch.json.
        "-D",
        "BABYLON_NATIVE_PLAYGROUND_IOS_PRODUCT_BUNDLE_IDENTIFIER=com.BabylonNative.Playground.iOS.Andy",
        "-D",
        "BABYLON_NATIVE_VALIDATION_TESTS_IOS_PRODUCT_BUNDLE_IDENTIFIER=com.BabylonNative.ValidationTests.iOS.Andy"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "macOS Playground",
      "dependsOn": "macOS CMake",
      "command": "xcodebuild",
      "args": [
        "-project",
        "build/macOS/BabylonNative.xcodeproj",
        "-scheme",
        "Playground",
        "build"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "iOS Playground (Simulator)",
      "dependsOn": "iOS CMake",
      "command": "xcodebuild",
      "args": [
        "-project",
        "build/iOS/BabylonNative.xcodeproj",
        "-scheme",
        "Playground",
        "-sdk",
        "iphonesimulator",
        "build"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "iOS Playground (Device)",
      "dependsOn": "iOS CMake",
      "command": "xcodebuild",
      "args": [
        "-project",
        "build/iOS/BabylonNative.xcodeproj",
        "-scheme",
        "Playground",
        "-sdk",
        "iphoneos",
        "-allowProvisioningUpdates",
        "build"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
