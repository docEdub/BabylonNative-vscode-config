{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "macOS CMake",
			"command": "cmake",
			"args": [
				"-B",
				"build/macOS",
				"-G",
				"Xcode"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "macOS Playground",
			"dependsOn": "macOS CMake",
			"command": "xcodebuild",
			"args": [
				"-project",
				"build/macOS/BabylonNative.xcodeproj",
				"-scheme",
				"Playground",
				"build"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}